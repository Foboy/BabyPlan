@section Js_InFoot{
    @Content.Script("cLoading.js", Url)
    @Content.Script("cUpload.js", Url)
    @Content.Script("json2.js", Url)
    @Content.Css("fancybox/jquery.fancybox-1.3.4.css", Url, BabyPlan.mvcApp.Infras.SourceRootEnums.JsLib)  
