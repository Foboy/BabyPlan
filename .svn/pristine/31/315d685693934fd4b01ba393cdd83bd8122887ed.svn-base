<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/main_relativelayout_header" 
  	android:layout_width="fill_parent" 
  	android:layout_height="40dip"
  	android:background="@drawable/head_bg">
  	
   	<ImageView 
   		android:id="@+id/frame_main_header_back"
	   	android:layout_width="wrap_content" 
	   	android:layout_height="wrap_content" 
	   	android:layout_gravity="left|center"
	   	android:clickable="true" 
	   	android:background="@drawable/head_back"/>
   	
    <TextView 
        android:id="@+id/frame_main_header_title"
        style="@style/main_head_title"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
		android:layout_marginLeft="5.0dip"/>
	
   	<ProgressBar 
		android:id="@+id/frame_main_header_progress" 
		style="@style/loading_small"
		android:layout_toRightOf="@+id/frame_main_header_title"
		android:layout_centerVertical="true"
		android:layout_marginLeft="5.0dip"
		android:visibility="gone"/>
   	
    <!--  <ImageButton
    	android:id="@+id/main_head_pub_post"
  		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_alignParentRight="true"
		android:layout_marginRight="2.0dip"
		android:background="@drawable/frame_icon_post"/>-->
    <Button
    	android:id="@+id/frame_main_header_post"
        android:layout_width="80dip"
    	android:layout_height="wrap_content"
    	android:layout_alignParentRight="true"
    	android:layout_centerVertical="true"
    	android:layout_marginRight="2.0dip"
    	android:background="@drawable/login_btn_selector" 
    	android:textColor="#ffffff"
        android:text="发布宝贝"
        android:visibility="gone"
        />
</RelativeLayout>