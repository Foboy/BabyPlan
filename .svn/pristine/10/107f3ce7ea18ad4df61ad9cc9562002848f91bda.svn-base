 /*注册登录*/
.reg_title{ margin:5px 0 0 20px;}
.reg_content{ margin:15px 0 20px 0;}
.reg_left_outer{border-right:solid 1px #EEF0EC; position:relative; overflow:hidden; padding:20px 30px;}
.reg_left_outer p{margin-bottom:20px;}
.reg_left_outer p label{display: inline-block;font-size: 16px;width: 80px;}
.reg_left_outer .tip{display: block;line-height: 24px;padding-left: 83px;}
.reg_left_outer .input_box{width:320px;}
.reg_left_outer .register_submit{border:none; width:110px; height:30px; margin-left:100px;}
.reg_right_outer{width:420px;}
.reg_right_outer .login_link{display:block;width:110px;padding:0;margin:10px 0;}

/*第三方登陆*/
.oauth_login{margin:30px 0;} 
.oautn_login_list{display:inline-block;margin:5px 0;width:420px;}
.oautn_login_list li{float:left;margin-right:10px;}

.button_pointer{ cursor:pointer;}

.clear{ clear:both;}

.clearfix:after{clear: both;content: ".";display: block;font-size: 0;height: 0;line-height: 0;overflow: hidden;visibility: hidden;}


/*提示信息*/

.msgbg{background-image: url(/images/gb_tip_layer.png);
       background-repeat: no-repeat; 
       color: #606060;
       display: inline-block;
       font-size: 14px;
       font-weight: bold;
       height: 54px;
       line-height: 54px;
}
.msgbox{left: 0;position: fixed;text-align: center;top: 46%;width: 100%;z-index: 65533;}
.msgbox_layer{background-position: 0 -161px;background-repeat: repeat-x;margin: 0 auto;padding: 0 18px 0 9px;position: relative;}
.gtl_ico_succ{ background-position: -6px 0;left: -45px;position: absolute;top: 0;width: 45px;}
.gtl_ico_warn{ background-position: -6px -54px;left: -45px;position: absolute;top: 0;width: 45px;}
.gtl_ico_error{ background-position: -6px -108px;left: -45px;position: absolute;top: 0;width: 45px;}
.gtl_end{ background-position: 0 0;position: absolute;right: -6px;top: 0;width: 6px;}

