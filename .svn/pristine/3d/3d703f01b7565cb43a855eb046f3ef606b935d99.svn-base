        left join
     (select pp.* from res_pic pp where pp.obj_type = 1) p ON pi.pro_item_id = p.obj_id
where (item_type = @bbType or @bbType = 0) and (sex = @Sex or @Sex = 0)  {0}
order by pi.create_time desc ");
